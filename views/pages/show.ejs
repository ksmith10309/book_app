<!DOCTYPE html>
<html>

<% include ../partials/head %>

<body>
    <% include ../partials/header %>

    <main>
        <% if (message === "show") { %>
            <div id="success-message"><span>Your Book Has Been Successfully Added</span></div>
        <% } %>

        <div class="book-card">
            <img src="<%= detail[0].image_url %>">
            <p class="title">
                <%= detail[0].title %>
            </p>
            <p class="author">
                <%= detail[0].author %>
            </p>

            <p class="description">
                <%= detail[0].description %>
            </p>
            <p class="isbn">
                ISBN: <%= detail[0].isbn %>
            </p>
        </div>



    </main>
    
    <% include ../partials/footer %>

</body>

</html>