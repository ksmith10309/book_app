<!DOCTYPE html>
<html>

<% include ../partials/head %>

<body>
  <% include ../partials/header %>
  <div class="page-type">
    <h2>Search Results</h2>
  </div>
  <main>

  <% if (results === "found") { %>

    <% books.forEach( book => { %>
    <div class="book-card">
      <img src="<%= book.image_url %>">
      <p class="title">
        <%= book.title %>
      </p>
      <p class="author">
        <%= book.author %>
      </p>
      <p class="description">
        <%= book.description %>
      </p>
      <p class="isbn">
        ISBN:
        <%= book.isbn %>
      </p>

      <form class="book-form" method="POST" action="/add-book">
        <input type="hidden" name="title" value="<%= book.title %>">
        <input type="hidden" name="author" value="<%= book.author %>">
        <input type="hidden" name="isbn" value="<%= book.isbn %>">
        <input type="hidden" name="image_url" value="<%= book.image_url %>">
        <textarea class="hidden-textarea" name="description"><%= book.description %></textarea>
        <button type="submit">Add to Database</button>
      </form>

    </div>
    <% }); %>

    <p> Number of books:
      <%= books.length %>
    </p>

  <% } else { %>

    <p> No Results Found </p>

  <% } %>

  </main>

<% include ../partials/footer %>

</body>

</html>
